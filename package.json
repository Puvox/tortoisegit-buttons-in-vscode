{
	"name": "tortoisegit-buttons-in-vscode",
	"displayName": "TortoiseGit Buttons",
	"description": "Shows TortoiseGit buttons in VScode File-Explorer, when you right-click on any file/folder.",
	"version": "0.1.0",
	"publisher": "Puvox",
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Other"
	],
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/Puvox/tortoisegit-buttons-in-vscode.git"
	},
	"main": "./out/extension.js",
	"activationEvents": [
		"onCommand:puvox.tgit.pull",
		"onCommand:puvox.tgit.fetch",
		"onCommand:puvox.tgit.commit",
		"onCommand:puvox.tgit.push",
		"onCommand:puvox.tgit.stashsave",
		"onCommand:puvox.tgit.stashapply",
		"onCommand:puvox.tgit.stashpop",
		"onCommand:puvox.tgit.rename",
		"onCommand:puvox.tgit.revert",
		"onCommand:puvox.tgit.log",
		"onCommand:puvox.tgit.blame",
		"onCommand:puvox.tgit.diff",
		"onCommand:puvox.tgit.refbrowse",
		"onCommand:puvox.tgit.repobrowser",
		"onCommand:puvox.tgit.resolve",
		"onCommand:puvox.tgit.conflicteditor",
		"onCommand:puvox.tgit.cleanup",
		"onCommand:puvox.tgit.rebase",
		"onCommand:puvox.tgit.merge",
		"onCommand:puvox.tgit.switch"
	],
	"contributes": {
		"commands": [
			{
				"command": "puvox.tgit.pull",
				"title": "üê¢ Pull"
			},
			{
				"command": "puvox.tgit.fetch",
				"title": "üê¢ Fetch"
			},
			{
				"command": "puvox.tgit.commit",
				"title": "üê¢ Commit"
			},
			{
				"command": "puvox.tgit.push",
				"title": "üê¢ Push"
			},
			{
				"command": "puvox.tgit.stashsave",
				"title": "üê¢ Stash Save"
			},
			{
				"command": "puvox.tgit.stashapply",
				"title": "üê¢ Stash Apply"
			},
			{
				"command": "puvox.tgit.stashpop",
				"title": "üê¢ Stash Pop"
			},
			{
				"command": "puvox.tgit.rename",
				"title": "üê¢ Rename"
			},
			{
				"command": "puvox.tgit.log",
				"title": "üê¢ Log"
			},
			{
				"command": "puvox.tgit.refbrowse",
				"title": "üê¢ RefBrowse"
			},
			{
				"command": "puvox.tgit.repobrowser",
				"title": "üê¢ Repo Browser"
			},
			{
				"command": "puvox.tgit.resolve",
				"title": "üê¢ Resolve"
			},
			{
				"command": "puvox.tgit.conflicteditor",
				"title": "üê¢ Conflict Editor"
			},
			{
				"command": "puvox.tgit.revert",
				"title": "üê¢ Revert"
			},
			{
				"command": "puvox.tgit.blame",
				"title": "üê¢ Blame"
			},
			{
				"command": "puvox.tgit.cleanup",
				"title": "üê¢ Cleanup"
			},
			{
				"command": "puvox.tgit.diff",
				"title": "üê¢ Diff"
			},
			{
				"command": "puvox.tgit.rebase",
				"title": "üê¢ Rebase"
			},
			{
				"command": "puvox.tgit.merge",
				"title": "üê¢ Merge"
			},
			{
				"command": "puvox.tgit.switch",
				"title": "üê¢ Switch"
			}
		],
		"submenus": [
		  {
			"id": "puvox.tgit.sub_sync",
			"label": "üê¢ Sync"
		  },
		  {
			"id": "puvox.tgit.sub_repologs",
			"label": "üê¢ Repo & Logs"
		  },
		  {
			"id": "puvox.tgit.sub_resolutions",
			"label": "üê¢ Conflicts & Resolutions"
		  },
		  {
			"id": "puvox.tgit.sub_branch",
			"label": "üê¢ Branch "
		  }
		],
		"menus": {
			"editor/context": [
				{
					"command": "puvox.tgit.commit",
					"when": "editorFocus",
					"group": "t_git@5"
				},
				{
					"submenu": "puvox.tgit.sub_sync",
					"when": "editorFocus",
					"group": "t_git@10"
				},
				{
					"submenu": "puvox.tgit.sub_stash",
					"when": "editorFocus",
					"group": "t_git@15"
				},
				{
					"command": "puvox.tgit.rename",
					"when": "editorFocus",
					"group": "t_git@20"
				},
				{
					"submenu": "puvox.tgit.sub_repologs",
					"when": "editorFocus",
					"group": "t_git@25"
				},
				{
					"submenu": "puvox.tgit.sub_resolutions",
					"when": "editorFocus",
					"group": "t_git@30"
				},
				{
					"submenu": "puvox.tgit.sub_branch",
					"when": "editorFocus",
					"group": "t_git@35"
				}
			],
			"explorer/context": [
				{
					"command": "puvox.tgit.commit",
					"group": "t_git@5"
				},
				{
					"submenu": "puvox.tgit.sub_sync",
					"group": "t_git@10"
				},
				{
					"submenu": "puvox.tgit.sub_stash",
					"group": "t_git@15"
				},
				{
					"command": "puvox.tgit.rename",
					"group": "t_git@20"
				},
				{
					"submenu": "puvox.tgit.sub_repologs",
					"group": "t_git@25"
				},
				{
					"submenu": "puvox.tgit.sub_resolutions",
					"group": "t_git@30"
				},
				{
					"submenu": "puvox.tgit.sub_branch",
					"group": "t_git@35"
				}
			],
			"editor/title/context": [
				{
					"command": "puvox.tgit.commit",
					"group": "t_git@5"
				},
				{
					"submenu": "puvox.tgit.sub_sync",
					"group": "t_git@10"
				},
				{
					"submenu": "puvox.tgit.sub_stash",
					"group": "t_git@15"
				},
				{
					"command": "puvox.tgit.rename",
					"group": "t_git@20"
				},
				{
					"submenu": "puvox.tgit.sub_repologs",
					"group": "t_git@25"
				},
				{
					"submenu": "puvox.tgit.sub_resolutions",
					"group": "t_git@30"
				},
				{
					"submenu": "puvox.tgit.sub_branch",
					"group": "t_git@35"
				}
            ],
			"puvox.tgit.sub_sync" : [
				{
					"command": "puvox.tgit.pull",
					"group": "t_git@sub_sync_1"
				},
				{
					"command": "puvox.tgit.fetch",
					"group": "t_git@sub_sync_2"
				},
				{
					"command": "puvox.tgit.push",
					"group": "t_git@sub_sync_3"
				}
			],
			"puvox.tgit.sub_stash" : [
				{
					"command": "puvox.tgit.stashsave",
					"group": "t_git@sub_stash_1"
				},
				{
					"command": "puvox.tgit.stashapply",
					"group": "t_git@sub_stash_2"
				},
				{
					"command": "puvox.tgit.stashpop",
					"group": "t_git@sub_stash_3"
				}
			],
			"puvox.tgit.sub_repologs" : [
				{
					"command": "puvox.tgit.log",
					"group": "t_git@sub_repologs_1"
				},
				{
					"command": "puvox.tgit.refbrowse",
					"group": "t_git@sub_repologs_2"
				},
				{
					"command": "puvox.tgit.repobrowser",
					"group": "t_git@sub_repologs_3"
				},
				{
					"command": "puvox.tgit.blame",
					"group": "t_git@sub_repologs_4"
				},
				{
					"command": "puvox.tgit.diff",
					"group": "t_git@sub_repologs_5"
				}
			],
			"puvox.tgit.sub_resolutions" : [
				{
					"command": "puvox.tgit.resolve",
					"group": "t_git@sub_resolutions_1"
				},
				{
					"command": "puvox.tgit.conflicteditor",
					"group": "t_git@sub_resolutions_2"
				},
				{
					"command": "puvox.tgit.revert",
					"group": "t_git@sub_resolutions_3"
				},
				{
					"command": "puvox.tgit.cleanup",
					"group": "t_git@sub_resolutions_4"
				}
			],
			"puvox.tgit.sub_branch" : [
				{
					"command": "puvox.tgit.rebase",
					"group": "t_git@sub_branch_1"
				},
				{
					"command": "puvox.tgit.merge",
					"group": "t_git@sub_branch_2"
				},
				{
					"command": "puvox.tgit.switch",
					"group": "t_git@sub_branch_3"
				}
			]
		},
		"keybindings": [
			{
				"command": "puvox.tgit.commit",
				"key": "ctrl+g+c",
				"when": "editorTextFocus"
			},
			{
				"command": "puvox.tgit.switch",
				"key": "ctrl+g+s",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.64.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"@vscode/test-electron": "^2.0.3"
	}
}
